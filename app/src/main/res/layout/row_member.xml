<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/member_list_layout"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/colorSkyBlue"
        android:id="@+id/memberImage"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/memberImage"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:textSize="20dp"
        android:id="@id/memberName"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textMemberMessage"
        android:layout_below="@+id/memberName"
        android:textSize="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/memberImage"
        android:id="@+id/memberMessage"
        />
</RelativeLayout>